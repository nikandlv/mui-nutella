{
	"name": "the-package-name",
	"main": "lib/MyComponent.js",
	"module": "lib/MyComponent.es.js",
	"scripts": {
		"start": "npm-run-all build:rollup --parallel start:*",
		"start:rollup": "rollup --config --sourcemap --watch",
		"start:storybook": "start-storybook --port 3000",
		"build": "run-s build:*",
		"build:clean": "rm -rf lib",
		"build:rollup": "rollup --config",
		"build:storybook": "build-storybook --output-dir dist",
		"format": "prettier --write",
		"lint:js": "eslint --fix",
		"lint:css": "stylelint --fix",
		"lint:scss": "stylelint --fix --syntax scss"
	},
	"dependencies": {
		"prop-types": "^15.6.2"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.3.1",
		"@babel/preset-react": "^7.0.0",
		"@samuelmeuli/eslint-config": "~1.1.0",
		"@samuelmeuli/stylelint-config": "~1.0.0",
		"@storybook/react": "^4.1.11",
		"autoprefixer": "^9.4.7",
		"babel-loader": "^8.0.5",
		"eslint": "^5.13.0",
		"eslint-config-airbnb": "17.1.0",
		"eslint-config-prettier": "^4.0.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-react": "^7.12.4",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.3",
		"node-sass": "^4.11.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^7.0.14",
		"prettier": "^1.16.4",
		"react": "^16.8.1",
		"react-dom": "^16.8.1",
		"rollup": "^1.1.2",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-postcss": "^2.0.3",
		"stylelint": "^9.10.1"
	},
	"files": [
		"lib/"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"yarn lint:js",
			"yarn format",
			"git add"
		],
		"*.css": [
			"yarn lint:css",
			"yarn format",
			"git add"
		],
		"*.scss": [
			"yarn lint:scss",
			"yarn format",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	}
}
